<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ChapterTwo"
    tools:showIn="@layout/activity_chapter_two">

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/Chapter2TV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/ChapterTwo_text1" />

        <ImageView
            android:id="@+id/Chapter2IM1"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:contentDescription="DDL"
            app:srcCompat="@drawable/chaptertwoimageone" />

        <TextView
            android:id="@+id/Chapter2TV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_weight="1"
            android:text="@string/ChapterTwo_text2" />

        <ImageView
            android:id="@+id/Chapter2IM2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Views"
            app:srcCompat="@drawable/chaptertwoimagetwo" />

        <TextView
            android:id="@+id/Chapter2TV3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_weight="1"
            android:text="@string/ChapterTwo_text3" />

        <Button
            android:id="@+id/youtubeChapter2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Watch Video on Advanced SQL"
            tools:text="Watch Video on Advanced SQL" />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>